{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": "build",
			"label": "tsc: build - tsconfig.json",
			"dependsOn": ["clear 'dist'"]
		},
		{
			"type": "shell",
			"command" :[ "rm -rf ${workspaceFolder}/dist "],
			"group": "build",
			"label": "clear 'dist'"
		}
	]
}